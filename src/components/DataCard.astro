---
interface Props {
	name: string;
	number: number;
}

const { name, number } = Astro.props;

import { rootRelPath } from '../js/rootRelPath';
---

<li class="data-card" data-id={number}>
	<a href={rootRelPath(`/monster/${number}/`)}>
		<div>
			<div class="monster-number">No.{number}</div>
			<div class="monster-name">{name}</div>
		</div>
	</a>
</li>

<style>
	.data-card {
		list-style: none;
		display: flex;
		padding: 1px;
		background-color: #F0F0F0;
		border-radius: 7px;
	}
	.is-hidden{
		display: none;
	}
	.data-card > a {
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		padding: 1.3rem;
		border-radius: 8px;
		color: #000;
	}
	.monster-number{
		font-size: 0.85em;
	}
	.monster-name{
		font-weight: bold;
	}
</style>
