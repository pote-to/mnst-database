---
import { rootRelPath } from "../js/rootRelPath";
---

<header>
    <div class="container">
        <a href={rootRelPath('/')} class="site-title">モンストDB</a>
        <nav class="header-navi">
            <ul>
                <li><a href="https://www.monster-strike.com">公式サイト</a></li>
                <li><a href="https://www.youtube.com/@monsterstrike">公式YouTubeチャンネル</a></li>
            </ul>
        </nav>
    </div>
</header>

<style>
    header{
        padding-inline: 2em;
        padding-block: 1.25em;
        background-color: #F2F7FD;
        border-bottom: 2px solid #D2D9DD;
    }
    .container{
        margin-inline: auto;
        display: flex;
        justify-content: space-between;
        flex-wrap: nowrap;
    }
    .site-title{
        padding-inline: 0.25em;
        text-decoration: none;
        font-weight: bold;
        font-size: 1em;
        color: #111;
    }
    .header-navi ul{
        display: flex;
        margin: 0;
        padding: 0;
        gap: 0.8em;
        list-style: none;
    }
    .header-navi ul li{
        display: contents;
    }
    .header-navi a{
        color: #000;
        text-decoration: none;
    }
    @media (hover: hover) {
        .header-navi a:hover{
            text-decoration: underline;
        }
	}
	@media (max-width:767.98px) {
        .container{
            font-size: 1.15em;
        }
		.header-navi{
            display: none;
        }
	}
</style>